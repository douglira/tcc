<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<filter>
		<filter-name>setCharacterEncoding</filter-name>
		<filter-class>filters.SetCharacterEncoding</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>setCharacterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>AdminAuth</filter-name>
		<filter-class>filters.AdminFilter</filter-class>
	</filter>
	<filter>
		<filter-name>Authentication</filter-name>
		<filter-class>filters.AuthenticateFilter</filter-class>
	</filter>
	<filter>
		<filter-name>SignInRedirect</filter-name>
		<filter-class>filters.SignInFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Authentication</filter-name>
		<url-pattern>/account/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Authentication</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AdminAuth</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SignInRedirect</filter-name>
		<url-pattern>/signin</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SignInRedirect</filter-name>
		<url-pattern>/signin.jsp</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>signin</servlet-name>
		<jsp-file>/signin.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>signin</servlet-name>
		<url-pattern>/signin</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>register</servlet-name>
		<jsp-file>/register.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>formForgotPass</servlet-name>
		<jsp-file>/forgot_pass.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>formForgotPass</servlet-name>
		<url-pattern>/form/forgot_pass</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>userHome</servlet-name>
		<jsp-file>/account/home.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>userHome</servlet-name>
		<url-pattern>/account</url-pattern>
	</servlet-mapping>
</web-app>